        <PdfViewer:PdfDocumentView x:Name="pdfDocumentView" HorizontalAlignment="Center"  Grid.Column="1" Grid.RowSpan="2" Width="414"/>


        <Menu >
            <MenuItem x:Name="MenuLoadOptions" Header="_Load">
                <MenuItem x:Name="New"      Header="_New PDF File"          Click="New_Click"/>
                <MenuItem x:Name="Open"     Header="_Open Existing PDF"    Click="Open_Click"/>
                <MenuItem x:Name="MenuLoadOptions_Load"     Header="_Load From Template" Click="MenuLoadOptions_Load_Click"/>
                <MenuItem x:Name="Word"     Header="_Open Word Document" Click="Word_Click"/>

            </MenuItem>
            <MenuItem x:Name="MenuSaveOptions" Header="_Save" IsEnabled="False" >
                <MenuItem x:Name="MenuSaveOptions_Template" Header="_Save Template" Click="MenuSaveOptions_Template_Click"/>
                <MenuItem Header="_Save PDF"/>
            </MenuItem>
            <MenuItem x:Name="MenuEditOptions" Header="_Edit" IsEnabled="False">
                <MenuItem x:Name="MenuEditOptions_AddBoxex" Header="_Add Boxes" Click="MenuEditOptions_AddBoxex_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuPrintOptions" Header="_Print" IsEnabled="False">
                <MenuItem x:Name="MenuPrintOptions_ToJPEG" Header="_Print To JPEG" Click="MenuPrintOptions_ToJPEG_Click"/>
            </MenuItem>
        </Menu>



