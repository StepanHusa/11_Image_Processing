<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_Image_Processing"
        xmlns:PdfViewer="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF" x:Class="_11_Image_Processing.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ButtonOpenClearPdf" Content="Open file to add boxes" HorizontalAlignment="Left" Margin="79,61,0,0" VerticalAlignment="Top" FontSize="20" Click="ButtonOpenClearPdf_Click"/>
        <Button Content="Save file for fill in" HorizontalAlignment="Left" Margin="309,61,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Name="Edit" Content="Edit file" HorizontalAlignment="Left" Margin="79,111,0,0" VerticalAlignment="Top" FontSize="20" Click="Edit_Click"/>
        <Button Content="Open filled scans" HorizontalAlignment="Left" Margin="310,111,0,0" VerticalAlignment="Top" FontSize="20"/>

        <PdfViewer:PdfViewerControl Name="PDFViewer" ItemSource="{Binding DocumentStream}" Visibility="Collapsed"/>

    </Grid>
</Window>
